// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       String  @unique @id @map("user_id") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username String
  email String @unique
  password String
  image    String  @default("data:image/jpeg;base64,")
  pins     Pin[] 
  saves    Save[]
  comments Comment[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pin {
  id          String   @unique @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  about       String
  destination String
  category    String
  image       String 
  userId      String   @map("user_id") @db.Uuid
  postedBy    User     @relation(fields: [userId], references: [id])
  saves       Save[]
  comments    Comment[]    // Assuming this is a numeric identifier for the postedBy user
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Save {
  id          Int      @id @default(autoincrement())
  userId      String   @map("user_id") @db.Uuid
  user        User     @relation(fields: [userId], references: [id])
  pinId       String   @map("pin_id") @db.Uuid
  pin         Pin      @relation(fields: [pinId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id          Int      @id @default(autoincrement())
  pinId       String   @map("pin_id") @db.Uuid
  pin         Pin      @relation(fields: [pinId], references: [id])
  postedById  String @db.Uuid    // Assuming this is a numeric identifier for the postedBy user
  postedBy    User     @relation(fields: [postedById], references: [id])
  comment     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Reverse relation
}



